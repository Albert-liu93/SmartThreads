<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.albertliu.cmpe137_size_confirmation_tracking.Tracking">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input your order number to check on order status"
        android:textSize="60px"
        android:gravity="center_horizontal"
        android:id="@+id/tvTitle"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_marginTop="40dp"
        android:hint="order number"
        android:id="@+id/etorderNumber"
        android:gravity="center"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etorderNumber"
        android:layout_marginTop="20dp"
        android:text="Check Order"
        android:id="@+id/chkorderbtn"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvorderStatus"
        android:text=""
        android:layout_below="@+id/chkorderbtn"
        android:textSize="70px"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textStyle="bold"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Main Menu"
        android:id="@+id/trackingMainMenubtn"
        android:layout_below="@+id/tvorderStatus"
        android:layout_marginTop="70dp"
        />



</RelativeLayout>
